<div class="row row-width">
  <div class="col-md-3 col-xs-12"><%= post.title %></div>
  <div class="col-md-3 col-xs-12"><%= link_to 'Show', post %></div>
  <div class="col-md-3 col-xs-12"><%= link_to 'Edit', '#', :class => 'edit_post' %></div>
  <div class="col-md-3 col-xs-12"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'delete_post'  %></div>
</div>